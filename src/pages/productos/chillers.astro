---
import ChillersLanding from "@/src/components/landings/ChillersLanding.astro";
import ChillerRepairLanding from "@/src/components/landings/ChillerRepairLanding.astro";
import ChillerMaintenanceLanding from "@/src/components/landings/ChillerMaintenanceLanding.astro";
import HeroSection from "@/src/components/hero/HeroSection.astro";
import ProductGrid from "@/src/components/products/ProductGrid.astro";
import MainLayout from "@/src/layouts/MainLayout.astro";

import { fetchHeroSectionById } from "@/src/utils/queries/fetchHeroSection";
import { fetchAllProducts } from "@/src/utils/queries/fetchAllProducts";
const heroData = await fetchHeroSectionById(286);
const allProducts = await fetchAllProducts();
---

<MainLayout title="MAZ - Chillers">
  <HeroSection {...heroData} />
  <ChillersLanding />
  <ChillerRepairLanding />
  <ChillerMaintenanceLanding />
  <div
    class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 px-4 py-12 place-items-center"
  >
    {allProducts.map(({ acf }) => <ProductGrid {...acf} cardStyle={true} />)}
  </div>
</MainLayout>
