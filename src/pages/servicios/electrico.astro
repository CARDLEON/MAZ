---
import MainLayout from "@/src/layouts/MainLayout.astro";
import HeroSection from "@/src/components/hero/HeroSection.astro";
import ServicesHomeSection from "@/src/components/layout/ServicesHomeSection.tsx";

import { servicesElec } from "@/src/utils/comps.config";
import { fetchHeroSectionById } from "@/src/utils/queries/fetchHeroSection";

const heroData = await fetchHeroSectionById(284);

const title =
  "Servicios de instalación eléctrica personalizados para cada necesidad";
const description = `En <b class="text-[#24408d]">MAZ Soluciones de Agua Helada</b>, comprendemos la importancia de una infraestructura eléctrica confiable. Por eso, <b class="text-[#24408d]">ofrecemos soluciones integrales en instalaciones eléctricas</b>, <b class="text-[#24408d]">garantizando</b> una integración precisa, operación <b class="text-[#24408d]">segura</b> y desempeño <b class="text-[#24408d]">óptimo</b> de todos tus sistemas.`;
---

<MainLayout title="MAZ - Servicios para instalaciones eléctricas">
  <HeroSection {...heroData} />
  <ServicesHomeSection
    client:visible
    title={title}
    description={description}
    services={servicesElec}
  />
</MainLayout>
