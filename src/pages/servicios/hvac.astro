---
import MainLayout from "@/src/layouts/MainLayout.astro";
import HeroSection from "@/src/components/hero/HeroSection.astro";
import ServicesHomeSection from "@/src/components/layout/ServicesHomeSection.astro";

import { fetchHeroSectionById } from "@/src/utils/queries/fetchHeroSection";
import { brandsHvac, highlightsHvac } from "@/src/utils/comps.config";

const data = await fetchHeroSectionById(287);
---

<MainLayout title="MAZ - Servicios para HVAC">
  <HeroSection {...data} />
  <ServicesHomeSection
    categories={[
      {
        label: "Póliza de Mantenimiento de Chillers",
        href: "/servicios/servicio/mantenimiento",
      },
      { label: "Reparacion de Chillers", href: "/servicios/servicio/reparacion" },
      { label: "Equipos Tablero y TVR", href: "/servicios/servicio/tvr" },
      { label: "Torres de Enfriamiento", href: "/servicios/servicio/enfriamiento" },
      {
        label: "Equipo Paquete y Divididos",
        href: "/servicios/servicio/paquete",
      },
      { label: "Bombas Centrífugas", href: "/servicios/servicio/bombas-centrifugas" },
      { label: "Tubería Hidráulica", href: "/servicios/servicio/hidraulica" },
      {
        label: "Soluciones HVAC Llave en Mano",
        href: "/servicios/servicio/hvac-llave-en-mano",
      },
      { label: "Ducteria de Aire ", href: "/servicios/servicio/ductos-aire" },
      {
        label: "Tuberia Especializada para Sistemas HVAC",
        href: "/servicios/servicio/tuberia-hidraulica",
      },
      {
        label: "Cuartos fríos Industriales a la Medida",
        href: "/servicios/servicio/cuartos-frios",
      },
    ]}
    title="Servicios HVAC Personalizados para Cada Necesidad"
    description={`<p>En <strong>MAZ Soluciones de Agua Helada</strong>, entendemos que cada cliente tiene requerimientos únicos. Por ello, ofrecemos <strong>soluciones HVAC a medida</strong>, asegurando eficiencia energética, reducción de costos operativos y prolongación de la vida útil de tus equipos.</p>`}
    highlights={highlightsHvac}
    brands={brandsHvac}
  />
</MainLayout>
