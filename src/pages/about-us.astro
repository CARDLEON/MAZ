---
import MainLayout from "@/src/layouts/MainLayout.astro";
import HeroSection from "@/src/components/hero/HeroSection.astro";
import HeaderAbout from "@/src/components/common/HeaderAbout.astro";
import AboutGrid from "@/src/components/grids/AboutGrid.astro";
import ServicesGrid from "@/src/components/grids/ServicesGrid.astro";

import { services } from "@/src/utils/comps.config";
import { fetchHeroSectionById } from "@/src/utils/queries/fetchHeroSection";

const heroData = await fetchHeroSectionById(288);
---

<MainLayout
  title="MAZ - Sobre nosotros"
  description="Conoce al equipo de MAZ y nuestra experiencia en mantenimiento y proyectos HVAC"
>
  <HeroSection {...heroData} />
  <HeaderAbout />
  <AboutGrid />
  <ServicesGrid services={services} />
</MainLayout>
